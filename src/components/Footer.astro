---
import { getLangFromUrl, useTranslations } from '../utils/i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer class="bg-neutral-900 text-white">
  <div class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Brand -->
      <div>
        <h3 class="text-2xl font-poppins font-bold text-primary-400 mb-4">AI Master 4U</h3>
        <p class="text-neutral-300 text-sm">
          {lang === 'vi' 
            ? 'Nền tảng toàn diện kết nối bạn với kiến thức chuyên sâu và công cụ AI đỉnh cao.'
            : 'Your ultimate platform connecting you to in-depth AI knowledge and cutting-edge tools.'
          }
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="font-semibold mb-4">
          {lang === 'vi' ? 'Liên kết nhanh' : 'Quick Links'}
        </h4>
        <ul class="space-y-2 text-sm">
          <li><a href="/" class="text-neutral-300 hover:text-primary-400 transition-colors">{t('nav.home')}</a></li>
          <li><a href="/blog" class="text-neutral-300 hover:text-primary-400 transition-colors">{t('nav.blog')}</a></li>
          <li><a href="/aitoolhub" class="text-neutral-300 hover:text-primary-400 transition-colors">{t('nav.toolhub')}</a></li>
          <li><a href="/contact" class="text-neutral-300 hover:text-primary-400 transition-colors">{t('nav.contact')}</a></li>
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h4 class="font-semibold mb-4">
          {lang === 'vi' ? 'Liên hệ' : 'Contact'}
        </h4>
        <p class="text-sm text-neutral-300">
          Email: <a href="mailto:contact@aimaster4u.com" class="text-primary-400 hover:text-primary-300 transition-colors">contact@aimaster4u.com</a>
        </p>
      </div>
    </div>

    <div class="border-t border-neutral-800 mt-8 pt-8 flex flex-col md:flex-row justify-between items-center">
      <p class="text-sm text-neutral-400">
        {t('footer.copyright')}
      </p>
      <div class="flex space-x-6 mt-4 md:mt-0">
        <a href="/privacy" class="text-sm text-neutral-400 hover:text-primary-400 transition-colors">
          {t('footer.privacy')}
        </a>
        <a href="/terms" class="text-sm text-neutral-400 hover:text-primary-400 transition-colors">
          {t('footer.terms')}
        </a>
      </div>
    </div>
  </div>
</footer>